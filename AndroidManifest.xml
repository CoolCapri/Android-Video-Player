<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wwvideoplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.wwvideoplayer.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wwvideoplayer.ListFileActivity"
            android:label="@string/title_activity_list_file"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.wwvideoplayer.LanguageSettingsActivity"
            android:label="@string/title_activity_language_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.wwvideoplayer.PlayVideoActivity"
            android:label="@string/title_activity_play_video"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>